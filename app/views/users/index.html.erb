<% provide(:title, 'All users') %>
<h1>All users</h1>
<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user %>
      <%= link_to user.username, user %>
      <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to "удалить", user, method: :delete,
                      data: { turbo_method: :delete, confirm: "Вы уверены?" } %>
      <% end %>
    </li>
  <% end %>
</ul>