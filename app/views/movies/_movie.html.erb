<div class="movies">
  <% @movies["films"].each do |film|%>
    <div class="movie">
      <div class="movie__cover-inner">
        <img src=<%=film["posterUrlPreview"]%> class="movie__cover" alt=<%=film["nameRu"] %>/>
        <div class="movie__cover--darkened"></div>
      </div>

      <div class="movie__info">
        <div class="movie__title"><%=film["nameRu"] %></div>
        <div class="movie__category"><%=film["genres"].map{|v| v.map{|_,v| "#{v}"}}.join(' ')%></div>

        <div class="movie__average movie__average--<%=getClassByRate(film["rating"])%>>">
         <%=film["rating"]%>
        </div>
      </div>
    </div>
  <% end %>
</div>